
@{
    ViewBag.Title = "Trang chủ admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Trang chủ</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Trang chủ</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<style>
    .custom-toggle {
        width: 60px;
    }

    .btn-menu {
        width: 100%;
        /*margin-bottom: 10px;*/
    }

    .btn-dropdown {
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
    }

    .dropdown-menu {
        font-size: 1rem;
    }

    .dropdown-menu-right {
        right: 0;
        left: auto;
    }

    .position-relative {
        position: relative;
    }
</style>

<!-- Main content -->
<section class="content">



    <div class="row">
        <div class="col-md-3">
            <!-- Danh mục -->
            @if (User.IsInRole("Admin"))
            {
                <a href="/admin/category" class="btn btn-lg btn-primary btn-block mb-2" style="background-color: blue;">
                    Danh mục
                </a>
            }
        </div>

        <div class="col-md-3">
            <!-- Tin tức -->
            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
            {
                <a href="/admin/news" class="btn btn-lg btn-success btn-block mb-2" style="background-color: green;">
                    Tin tức
                </a>
            }
        </div>

        <div class="col-md-3">
            <!-- Đơn hàng -->
            @if (User.IsInRole("Admin"))
            {
                <a href="/admin/order" class="btn btn-lg btn-warning btn-block mb-2" style="background-color: orange;">
                    Đơn hàng
                </a>
            }
        </div>

        <div class="col-md-3">
            <!-- Thống kê -->
            @if (User.IsInRole("Admin"))
            {
                <a href="/admin/Statistical" class="btn btn-lg btn-info btn-block mb-2" style="background-color: yellow; color:black">
                    Thống kê
                </a>
            }
        </div>





        <div class="col-md-3">
            <!-- Danh mục sản phẩm -->
            <div class="btn-group btn-block position-relative">
                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                {
                    <button type="button" class="btn btn-lg btn-info btn-menu" style="background-color: purple;">
                        Danh mục sản phẩm
                    </button>

                    <button type="button" class="btn btn-info dropdown-toggle custom-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: purple;">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="/admin/productcategory">Danh mục sản phẩm</a></li>
                        <li><a href="/admin/products">Sản phẩm</a></li>
                    </ul>
                }
            </div>
        </div>

        <div class="col-md-3">
            <!-- Vai trò -->
            <div class="btn-group btn-block position-relative">
                @if (User.IsInRole("Admin"))
                {
                    <button type="button" class="btn btn-lg btn-danger btn-block btn-menu" style="background-color: gray;">
                        Vai trò
                    </button>

                    <button type="button" class="btn btn-danger dropdown-toggle custom-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: gray;">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="/admin/role">Vai trò</a></li>
                        <li><a href="/admin/account">Tài khoản</a></li>
                    </ul>
                }
            </div>
        </div>









        <div class="col-md-3">
            <!-- Đăng xuất -->
            <form id="logOffForm" method="post" action="/new-duong-dan">
                <button type="button" onclick="document.getElementById('fakeSubmitLink').click()" class="btn btn-lg btn-danger btn-block mb-2">
                    Đăng xuất
                </button>
                <!-- Thẻ a ẩn để giả mạo nút submit -->
                <a id="fakeSubmitLink" href="javascript:void(0)" onclick="document.getElementById('logOffForm').submit()"></a>
            </form>
        </div>



    </div>



</section>
<!-- /.content -->