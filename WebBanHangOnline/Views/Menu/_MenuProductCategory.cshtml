@if (Model != null && Model.Any())
{
    <style>
        .banner {
            text-align: center;
        }

            .banner .banner_item {
                display: inline-block;
                margin: 10px;
                text-align: center;
                vertical-align: top;
                width: 30%; /* Điều chỉnh chiều rộng của item */
                max-width: 300px; /* Giới hạn chiều rộng tối đa */
            }

            .banner .banner_image {
                width: 100%;
                height: 200px; /* Điều chỉnh chiều cao của hình ảnh */
                background-size: contain; /* Hiển thị hình ảnh khớp với kích thước div */
                background-position: center;
                background-repeat: no-repeat; /* Ngăn lặp hình ảnh */
            }
    </style>

    <div class="banner">
        @foreach (var item in Model)
        {
            <div class="banner_item">
                <div class="banner_image" style="background-image: url('@item.Icon')"></div>
                <div class="banner_category">
                    <a href="/danh-muc-san-pham/@item.Alias-@(item.Id)">@item.Title</a>
                </div>
            </div>
        }
    </div>
}
